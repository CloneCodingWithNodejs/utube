mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`${video.fileUrl}`)
        .orange__bar#juice
        #progress__bar
        .videoPlayer__controls
            .videoPlayer__column
                span#time
                    span#currentTime 00:00
                    |/ 
                    span#totalTime 00:00
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range",min="0",max="1",step="0.01" value="0.5")
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand